# ============================================
# TRAP - Honeypot Security System Configuration
# ============================================

# ============ TELEGRAM (Required) ============
# Create a bot via @BotFather and get the token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Chat ID where alerts will be sent
# Use @userinfobot to get your chat/group ID
# For groups, the ID starts with -100
TELEGRAM_CHAT_ID=-100xxxxxxxxxx

# Optional: Message thread ID for topics in groups
TELEGRAM_MESSAGE_THREAD_ID=

# ============ HONEYPOT SETTINGS ============
# Enable/disable the honeypot system
HONEYPOT_ENABLED=true

# Logging level: debug | info | warn | error
HONEYPOT_LOG_LEVEL=info

# Your domain (used in fake credentials)
HONEYPOT_FAKE_DOMAIN=example.com

# ============ IP BLOCKING ============
# Default block duration in seconds (3600 = 1 hour)
BLOCK_DURATION_DEFAULT=3600

# Storage for blocked IPs: memory | redis | database
BLOCK_STORAGE=memory

# Redis URL (if BLOCK_STORAGE=redis)
REDIS_URL=redis://localhost:6379

# ============ GEOLOCATION ============
# IP geolocation service (free tier available)
# Options: ip-api | ipinfo | maxmind
GEO_PROVIDER=ip-api

# API key for paid geolocation services (optional)
GEO_API_KEY=

# ============ ADVANCED ============
# Enable media capture attempts (camera, mic, screen)
ENABLE_MEDIA_CAPTURE=true

# Enable WebRTC real IP detection
ENABLE_WEBRTC_LEAK=true

# Enable GPS geolocation request
ENABLE_GPS_LOCATION=true

# Fake credentials customization
FAKE_DB_HOST=db.example.com
FAKE_DB_USER=admin
FAKE_DB_PASS=SuperSecretPassword123!
FAKE_STRIPE_KEY=sk_live_FAKE_KEY_FOR_HONEYPOT
FAKE_AWS_KEY=AKIAFAKEACCESSKEY
